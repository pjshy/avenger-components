{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2017"
    ],

    "sourceMap": true,
    "importHelpers": true,
    "newLine": "LF",
    "skipLibCheck": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "downlevelIteration": true,
    "noEmitHelpers": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "strictNullChecks": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
  ]
}
